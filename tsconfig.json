{
    "compilerOptions": {
      "target": "es6",
      "jsx": "react",
      "noEmit": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "allowJs": true,
      "importHelpers": true,
      "resolveJsonModule": true,
      "pretty": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "esnext",
        "dom"
      ],
      "removeComments": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictFunctionTypes": true,
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@themes/*": ["./src/themes/*"],
        "@pages/*": ["./src/pages/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@store/*": ["./src/store/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@assets/*": ["./src/assets/*"],
        "@adapters/*": ["./src/adapters/*"],
        "@contexts/*": ["./src/contexts/*"],
        "@layouts/*": ["./src/layouts/*"],
        "@constants/*": ["./src/constants/*"],
        "@interfaces/*": ["./src/interfaces/*"],
      }
    },
    "include": [
        "src"
    ]
  }